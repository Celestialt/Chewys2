<!DOCTYPE html>
<html>
  <head>
    <title>Chewy's</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="flex-content-container">
    <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
     <%= link_to 'Chewy\'s', root_path, class: 'navbar-brand' %>

      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav mr-auto mt-2 mt-md-0">
          <li class="nav-item">
            <%= link_to 'View Menu', menu_items_path %>
          </li>
        </ul>
        <ul class="navbar-nav links">
          <% if current_user %>
            <li class="nav-item welcome">
              Welcome, <%= current_user.email %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
            <%= link_to 'Log in', new_user_session_path, class: 'nav-link' %> 
            </li>
            <li class="nav-item">
              <%= link_to 'Create an Account', new_user_registration_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>

        <ul>
          <li class="nav-item address">
            <h5>Rt. 201 Niagara Falls NY 14301</h5>
          </li>

        </ul>
        <ul "navbar-nav cart-link">
          <% if user_signed_in? %>
            <li class="nav-item">
            <%= link_to 'View Cart', cart_items_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
    
      </div>
    </nav>
          <% if notice.present? %>
            <p class="alert"><%= notice %></p>
          <% end %>

          <% if alert.present? %>
            <p class="alert"><%= alert %></p>
          <% end %>
       
      <%= yield %>
    </div>
  
  <div id="footer">
    <div class="container">
      <div class="row">
        <div class="col-12 col-sm-3">
          <%= link_to 'About Us', root_path %>
          <br />
            <%= link_to 'History', "#" %>
          <br />
            <%= link_to 'Administrator Menu', new_administrator_menu_item_path %>
            <br />
            <%= link_to 'Administrator Nutrition', new_administrator_food_path %>
        </div>
        <div class="col-12 col-sm-3">
          <br />
            <%= link_to 'Restaurant Hours', business_hours_path %>
          <br />
            <%= link_to 'View Menu', menu_items_path %>
          <br />
            <%= link_to ' Administrator Restaurant Hours', new_administrator_business_hour_path %>
        </div>
        <div class="col-12 col-sm-3">
          <br />
            <%= link_to 'Nutrition', foods_path %>
            <br />
            <%= link_to ' Administrator Nutrition', new_administrator_food_path %>
        </div>
        <br />
        <div class="col-12 col-sm-3">
          <br />
            <%= link_to 'FAQ', "#" %>
          <br />
          <%= link_to 'Contact Us', "#" %>
          <br />
          <%= link_to 'Employment Opportunities', "#" %>
        </div>
      </div>
    </div>
    
  </div>

</body>
</html>