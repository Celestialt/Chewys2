<br />

<div class ="booyah-box col-10 offset-1">
  <h1 class="text-center">Menu Items</h1>
  <hr />
   <% @menu_items.in_groups_of(5, false).each do |group| %>
    <div class="row">
      
        <% group.each do |menu_item| %>
          
         <div class="menu_item col-2">
          <%= link_to menu_item_path(menu_item) do %>
        			<%= image_tag menu_item.image,  class: 'img-fluid' %>
            <% end %>
      		  <h2><%= link_to menu_item.name, menu_item_path(menu_item) %></h2>
          </div>
        <% end %>
    
    </div>
        
    <% end %>
      
</div>
































