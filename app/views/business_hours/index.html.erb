<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Restaurant Hours</h1>
  <hr class="style7">
   	
	  <% @business_hours.each do |business_hour| %>

	  	<div class="container">
		  	<div class="row">
		  	<div class="col-sm-4 col-12 day">
			  	<h2 class="text-center"><%= link_to business_hour.day, business_hour_path(business_hour) %></h2>
			  </div>
			    	
					<div class="col-sm-3 col-12 hour">
		 				 <h2 class="text-center"><%= link_to business_hour.opening_time.strftime("%l:%M %p"), business_hour_path(business_hour) %></h2> 
		 			</div>
		 			<div class="col-sm-1 col-12 dash">
		 				<h2 class="text-center">......</h2>
		 			</div>
		 				<div class="col-sm-3 col-12 time">
			 				<h2 class="text-center"><%= link_to business_hour.closing_time.strftime("%l:%M %p"), business_hour_path(business_hour) %></h2>
		 				</div>
		 			
		 		</div>
	 		</div>
 	  <% end %>

</div>
